<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.uic.sashank.entryapplication.MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/ChicagoLayout"
        android:clickable="true">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="New Text"
            android:id="@+id/chicagoTextView"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:textColor="#032143" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Chicago"
            android:id="@+id/chicagoButton"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:background="#31a4cb"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:layout_margin="20dp"
            android:enabled="true"
            android:clickable="true" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/IndianapolisLayout"
        android:clickable="true">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Indianapolis"
            android:id="@+id/indianapolisButton"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:background="#bb8a30"
            android:backgroundTint="#a38e2d"
            android:textColor="#ffffff"
            android:layout_margin="20dp"
            android:clickable="true"
            android:enabled="true" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="New Text"
            android:id="@+id/indianapolisTextView"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:textColor="#312403" />

    </LinearLayout>
</LinearLayout>
